<h2>Edit Your Event:</h2>
<form class="" action="/events/<%= @event.id %>" method="post">
  <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token %>">
  <input type="hidden" name="_method" value="patch">
  <input type="text" placeholder="Event Name" name="event[name]" value="<%= @event.name %>">
  <input type="date" placeholder="Date" name="event[date]" value="<%= @event.date %>">
  <input type="text" placeholder="City" name="event[location]" value="<%= @event.location %>">
  <input type="text" placeholder="State" name="event[state]" value="<%= @event.state %>">
  <input type="hidden" placeholder="" name="event[user_id]" value="<%= session[:id] %>">
  <input type="submit" name="" value="Update Event">
</form>
